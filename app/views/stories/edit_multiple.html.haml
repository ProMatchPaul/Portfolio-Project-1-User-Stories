%h1
  Selected User Stories

= form_tag update_multiple_stories_path, method: :put do
  - @stories.each do |story|
    = hidden_field_tag "story_ids[]", story.id
  = fields_for :story do |f|
    .field
      = f.label :status
      %br/
      = f.select :status, options_for_select(["Backlog","Not Started","In Progress", "Test", "Done"]), include_blank: true
  .actions
    = submit_tag "Update All These Stories"


%h2 In Progress
= render 'list', :stat => 'In Progress'
%h2 Not Started
= render 'list', :stat => 'Not Started'
%h2 Test
= render 'list', :stat => 'Test'
%h2 Backlog
= render 'list', :stat => 'Backlog'
%h2 Done
= render 'list', :stat => 'Done'
%br/



.button
  = link_to 'Back to All Stories', stories_path
